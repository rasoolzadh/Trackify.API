<Shell
    x:Class="Trackify.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Trackify"
    xmlns:views="clr-namespace:Trackify.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage"
            Icon="home.png" />

        <ShellContent
            Title="Charts"
            ContentTemplate="{DataTemplate views:ChartsPage}"
            Route="ChartsPage"
            Icon="chart.png" />
    </TabBar>

</Shell>